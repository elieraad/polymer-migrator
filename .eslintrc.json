{
    "env": {
        "node": true,
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "max-len": [
            "error",
            {
                "code": 160,
                "tabWidth": 2,
                "ignoreUrls": true,
                "ignoreComments": false,
                "ignoreStrings": false,
                "ignoreTemplateLiterals": false,
                "ignoreRegExpLiterals": false
            }
        ]
    }
}